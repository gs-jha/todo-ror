<%= form_with(model: task, class: "contents") do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-6">
    <%= form.label :title,  class: "text-sm font-medium text-gray-900 block mb-2" %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="mb-6">
    <%= form.label :details,  class: "text-sm font-medium text-gray-900 block mb-2" %>
    <%= form.text_area :details, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="mb-6">
    <%= form.label :priority,  class: "text-sm font-medium text-gray-900 block mb-2" %>
    <%= form.number_field :priority, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="mb-6">
    <%= form.label :date,  class: "text-sm font-medium text-gray-900 block mb-2" %>
    <%= form.datetime_field :date, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="flex items-start mb-6">
    <div class="flex items-center h-5">
      <%= form.label :completed %>
    </div>
    <div class="text-sm ml-3">
      <%= form.check_box :completed, class: "bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-4 w-4 rounded" %>
    </div>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-3xl bg-opacity-50 bg-green-900 px-10 py-2 text-white shadow-xl backdrop-blur-md transition-colors duration-300 hover:bg-green-600" %>
  </div>
<% end %>
